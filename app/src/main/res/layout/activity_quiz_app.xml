<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo3"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manasye"
                    android:textColor="#00E5FF"
                    android:textSize="24dp"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_weight="1"
                    android:textColor="#D50000"
                    android:textSize="24dp"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"/>

            </LinearLayout>

            <TextView
                android:id="@+id/question"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What country has the seconnd largest population in the world?"
                android:textColor="#fff"
                android:textSize="20dp"
                android:gravity="center"
                android:fontFamily="serif-monospace"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/choiceA"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="India"
                    android:fontFamily="serif-monospace"
                    android:background="@drawable/mybutton"
                    android:textColor="#fff"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/choiceB"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="China"
                    android:fontFamily="serif-monospace"
                    android:background="@drawable/mybutton"
                    android:textColor="#fff"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_margin="20dp"
                    android:id="@+id/choiceC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Indonesia"
                    android:fontFamily="serif-monospace"
                    android:background="@drawable/mybutton"
                    android:textColor="#fff"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/choiceD"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:text="America"
                    android:fontFamily="serif-monospace"
                    android:background="@drawable/mybutton"
                    android:gravity="center"/>


            </LinearLayout>

            <Button
                android:layout_margin="20dp"
                android:id="@+id/quitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quit"
                android:fontFamily="serif-monospace"
                android:background="#311B92"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>